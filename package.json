{
  "name": "islamic-growth-app",
  "version": "1.0.0",
  "description": "Islamic Growth Full Stack Application",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run start",
    "build": "cd client && npm run build && xcopy /E /I /Y \"dist\" \"..\\dist\" || cp -r dist ../",
    "build-client": "cd client && npm run build",
    "postinstall": "npm install --prefix server && npm install --prefix client"
  },
  "keywords": ["islamic", "growth", "fullstack"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "fs-extra": "^11.2.0"
  },
  "engines": {
    "node": "20.x"
  }
}